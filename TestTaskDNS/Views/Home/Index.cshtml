<div style="padding-top:2%; padding-bottom:2%; height:5%;">
    <div style="background-color:dimgray; display:flex">
        <div style="width:19%; padding-left:2%; padding-right:1%; padding-top:1%; padding-bottom:1%">
            <button style="width:100%;" id="CreateExcelTable" class="Button">Сгенерировать excel</button>
        </div>
        <div style="width:19%; padding-left:1%; padding-right:2%; padding-top:1%; padding-bottom:1%">
            <button style="width:100%;" id="Add" class="Button">Добавить запись</button>
        </div>
        <div id="menu" style="display:none; width:60%; padding-top:1%; padding-bottom:1%">
            <button style="width:30%; padding-right:2%" id="Update" class="Button">Изменить запись</button>
            <button style="width:20%; padding-right:2%" id="Delete" class="Button">Удалить запись</button>
            <button style="width:40%;" id="Subordination" class="Button">Вывести структуру руководства</button> 
        </div>
        <div id="sort" style="display:none; width:60%; padding-top:1%; padding-bottom:1%">
            <button class="Button" style="width:40%; padding-right:2%" id="sortingUp">Отсортировать по возрастанию</button>
            <button class="Button" style="width:40%" id="sortingDown">Отсортировать по убыванию</button>
        </div>
    </div>
</div>
<div>
    <table id="Table" class="table" width="1200px"></table>
</div>

<div class="coverHide" id="cover">
    @{await Html.RenderPartialAsync("Modal"); }
    @{await Html.RenderPartialAsync("Subordination"); }
</div>



